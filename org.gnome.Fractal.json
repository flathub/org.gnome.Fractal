{
    "app-id": "org.gnome.Fractal",
    "runtime": "org.gnome.Platform",
    "runtime-version": "48",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable",
        "org.freedesktop.Sdk.Extension.llvm18"
    ],
    "command": "fractal",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri"
    ],
    "build-options": {
        "append-ld-library-path": "/usr/lib/sdk/llvm18/lib",
        "append-path": "/usr/lib/sdk/llvm18/bin:/usr/lib/sdk/rust-stable/bin"
    },
    "add-extensions": {
        "org.freedesktop.Platform.ffmpeg-full": {
            "version": "24.08",
            "directory": "lib/ffmpeg",
            "add-ld-path": ".",
            "no-autodownload": false,
            "autodelete": false
        }
    },
    "cleanup-commands": [
        "mkdir -p ${FLATPAK_DEST}/lib/ffmpeg"
    ],
    "cleanup": [
        "bin/grass"
    ],
    "modules": [
        {
            "name": "grass",
            "buildsystem": "simple",
            "build-options": {
                "env": {
                    "CARGO_HOME": "/run/build/grass/cargo"
                }
            },
            "build-commands": [
                "cargo build --release --locked",
                "mkdir -p /app/bin",
                "install -D ./target/release/grass /app/bin/"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/connorskees/grass",
                    "tag": "0.13.4",
                    "commit": "e0bb9e2eabfc3a58e42b03089cd7b22c68d09d0b"
                },
                "grass-cargo-sources.json"
            ]
        },
        {
            "name": "protobuf-c",
            "buildsystem": "autotools",
            "config-opts": [
                "--disable-protoc"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/protobuf-c/protobuf-c.git",
                    "tag": "v1.5.1",
                    "commit": "185beed28e65494be7505b30c1afeaf199e19b23"
                }
            ]
        },
        {
            "name": "libshumate",
            "buildsystem": "meson",
            "config-opts": [
                "-Dgir=false",
                "-Dvapi=false",
                "-Dgtk_doc=false",
                "-Dvector_renderer=true"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/libshumate.git",
                    "tag": "1.4.0",
                    "commit": "06021e35f0d479612fb1a3af91a73ba562175e03"
                }
            ]
        },
        {
            "name": "glycin-loaders",
            "buildsystem": "meson",
            "config-opts": [
                "-Dtests=false",
                "-Dlibglycin=false",
                "-Dintrospection=false",
                "-Dvapi=false",
                "-Dcapi_docs=false",
                "-Dpython_tests=false"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/glycin",
                    "tag": "1.2.0",
                    "commit": "c886add2e54f916a8158e491ed973581a2c7b3d0",
                    "disable-submodules": true
                },
                "glycin-loaders-cargo-sources.json",
                {
                    "type": "shell",
                    "commands": [
                        "mkdir .cargo",
                        "mv cargo/config .cargo/config.toml",
                        "cat .cargo/config.toml"
                    ]
                }
            ]
        },
        {
            "name": "fractal",
            "buildsystem": "meson",
            "config-opts": [
                "-Dprofile=beta"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/World/fractal.git",
                    "tag": "11.beta",
                    "commit": "f513aa5f8b355e335b2acaa7ffffac66c5301e48"
                },
                "fractal-cargo-sources.json",
                {
                    "type": "shell",
                    "commands": [
                        "cat cargo/config >> .cargo/config.toml",
                        "cat .cargo/config.toml"
                    ]
                }
            ]
        }
    ]
}